{
    "directories": ["bin", "src", "commands"],
    "files": ["config.php"],
    "output": "build/caper.phar",
    "chmod": "0755",
    "finder": [
        {
            "name": [
                "*.php"
            ],
            "exclude": [
                "tests",
                "Tests",
                "behat"
            ],
            "in": [
                "vendor"
            ]
        }
    ],
    "main": "bin/caper",
    "stub": true,
    "compactors": "Herrera\\Box\\Compactor\\Php",
    "compression": "BZ2"
}
